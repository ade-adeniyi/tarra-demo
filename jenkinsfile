pipeline {
    agent any
    tools {
         terraform 'terraform'
    }
    stages {
        stage('Git checkout'){
            steps {
                git 'https://github.com/agboke/tarra-demo.git'
            }
        }
        stage('Terraform init'){
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Plan'){
            steps {
                sh 'terraform plan'
            }
        }
        stage('Terraform destroy'){
            steps {
                sh 'terraform destroy --auto-approve'
            }
        }
    }    
}
